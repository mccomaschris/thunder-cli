#!/usr/bin/env php
<?php

// Unset memory limit
ini_set('memory_limit', -1);
$autoloadFound = false;

foreach ([
    __DIR__ . '/../vendor/autoload.php',            // local dev
    __DIR__ . '/../../autoload.php',                // global install
    __DIR__ . '/../../../autoload.php',             // fallback
] as $autoload) {
    if (file_exists($autoload)) {
        require $autoload;
        $autoloadFound = true;
        break;
    }
}

if (! $autoloadFound) {
    fwrite(STDERR, "âŒ Could not locate autoload.php. Did you run composer install?\n");
    exit(1);
}

$app = new \ThundrLabs\ThundrCli\Application();
$app->run();
